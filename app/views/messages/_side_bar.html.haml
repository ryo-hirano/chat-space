!!!
%html
  %body
    .side-bar
      .side-bar__user-name
        .side-bar__user-name__name-box
          .side-bar__user-name__name-box__name
            = current_user.name
          .side-bar__user-name__name-box__icon
            .side-bar__user-name__name-box__icon__edit
              = link_to new_group_path do
                %i.far.fa-edit
              = link_to edit_user_path(current_user) do
                %i.fa.fa-cog
      .side-bar__group-list
        .side-bar__group-list__groups
          - current_user.groups.each do |group|
            .group
              = link_to group_messages_path(group) do
                .side-bar__group-list__groups__group-name
                  = group.name
                .side-bar__group-list__groups__group-messages
                  = group.show_last_message
                  